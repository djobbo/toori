{
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "sourceMap": true,
        "allowJs": true,
        "target": "es6",
        "lib": ["esnext"],
        "moduleResolution": "node",
        "outDir": "lib",
        "declaration": true,
        "strictNullChecks": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@reaccord/jsx",
        "skipLibCheck": true,
        "noUnusedLocals": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib", "src/**/*.test.ts"]
}